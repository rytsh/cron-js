{
  "name": "cron-js",
  "version": "0.0.1",
  "description": "Cron parser WASM library",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/browser.js",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/browser.d.ts",
        "default": "./dist/browser.js"
      },
      "node": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist/",
    "wasm/"
  ],
  "scripts": {
    "build": "tsc",
    "build:wasm": "tinygo build -o ./wasm/module.wasm -target=wasm -no-debug cmd/cron/main.go",
    "example": "node example.js"
  },
  "keywords": [
    "cron",
    "wasm",
    "parser"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "http-server": "^14.1.1",
    "typescript": "^5.7.2"
  }
}
